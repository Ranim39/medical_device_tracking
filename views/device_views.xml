<xml version="1.0" encoding ="UTF-8"?>
<!-- la balise principal -->
<odoo>
<!-- Vue formulaire de l'appareil médical -->
<!-- id=id unique pour Odoo -->
<!-- model=signifie que tu declare une vue d'interface-->
<record id="view_medical_device_form" model="ir.ui.view">
<!-- le nom donné à cette vue(usage interne) -->
<field name="name">medical.device.form</field>
<!-- informer Odoo que cette vue est pour le modele medical.device -->
<field name="model">medical.device</field>
<field name="arch" type="xml">
<!-- "Appareil Médical" est le titre affiché en haut du formulaire.-->
    <form string="Appareil Médical">
      <sheet>
        <group>
          <field name="name"/>
          <field name="achat_date"/>
          <field name="serial_number"/>
          <field name="client_id"/>
          <field name="garantie_duration"/>
          <field name="statut"/>
          <field name="notes"/>
        </group>
      </sheet>
    </form>
</field>
</record>
<!--Vue liste des appareils -->

<record id="view_medical_device_tree" model="ir.ui.view">
  <field name="name">medical.device.tree</field>
  <field name="model">medical.device</field>
  <field name="arch" type="xml">
    <tree string="Appareils Médicaux">
        <field name="name"/>
        <field name="achat_date"/>
        <field name="serial_number"/>
        <field name="client_id"/>
        <field name="statut"/>
    </tree>
  </field>
</record>
<!-- Action pour afficher la vue-->
<record id="action_medical_device" model="ir.actions.act_window">
  <field name="name">Appareils Médicaux</field>
  <field name="res_model">medical.device</field>
  <field name="view_mode">tree,form</field>
</record>

<!--Menu principal et sous menu-->
<menuitem id="menu_medical_root" name="Appareils Médicaux"/>

<menuitem id="menu_medical_device" name="Liste des Appareils"
          parent="menu_medical_root"
          action="action_medical_device"/>

</odoo>
